<script>
    // Portfolio data from Eleventy global data (src/_data/portfolio.json)
    // Process portfolio data: convert relative paths to full URLs using r2img filter
    const portfolioData = {
{%- for categoryKey, categoryData in portfolio %}
        '{{ categoryKey }}': {
            layout: '{{ categoryData.layout }}',
            items: [
{%- for item in categoryData.items %}
                { src: '{{ item.src | r2img }}', tag: {{ item.tag | dump | safe }}, sub: {{ item.sub | dump | safe }} }{% if not loop.last %},{% endif %}
{%- endfor %}
            ]
        }{% if not loop.last %},{% endif %}
{%- endfor %}
    };

    // Initialize with passport-korea
    window.addEventListener('DOMContentLoaded', () => {
        filterPortfolio('passport-korea', document.querySelector('.category-pill.active'));
    });

    function filterPortfolio(category, btn) {
        // Update Active Button
        document.querySelectorAll('.category-pill').forEach(p => p.classList.remove('active'));
        btn.classList.add('active');

        const grid = document.getElementById('portfolio-grid');
        // Fallback to passport-korea if category not found
        const data = portfolioData[category] || portfolioData['passport-korea'];
      
        // Adjust Grid Layout based on data type - 響應式間距
        if (data.layout === 'horizontal') {
            grid.className = "grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 max-w-[1400px] mx-auto px-0";
      } else {
            grid.className = "grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6 max-w-[1400px] mx-auto px-0";
      }

        // Render Items with Fade Effect - No cropping, preserve aspect ratio
        // 圖片響應式優化：使用 sizes 屬性告知瀏覽器實際顯示尺寸
        // Note: R2 doesn't support dynamic resizing via URL params, so we use the optimized single size
        // The image is already optimized to MAX_WIDTH (1400px) during upload, which covers:
        // - Horizontal layout on retina: 680px * 2 = 1360px
        // - Vertical layout on retina: 340px * 2 = 680px
        grid.innerHTML = data.items.map((item, index) => {
            const baseSrc = item.src;
            // Use correct sizes based on layout type
            // Horizontal: desktop 50vw (2 columns), mobile 100vw (1 column)
            // Vertical: desktop 25vw (4 columns), mobile 50vw (2 columns)
            const sizes = data.layout === 'horizontal' 
                ? "(max-width: 768px) 100vw, 50vw"
                : "(max-width: 640px) 50vw, (max-width: 1024px) 25vw, 20vw";
            
            const cardClass = data.layout === 'horizontal' 
                ? 'portfolio-img-card portfolio-img-card-horizontal animate-fade-in group border border-slate-100'
                : 'portfolio-img-card animate-fade-in group border border-slate-100';
            
            return `
            <div class="${cardClass}" style="animation-delay: ${index * 0.1}s">
                <img 
                    src="${baseSrc}" 
                    sizes="${sizes}"
                    alt="${item.sub}" 
                    loading="lazy"
                    decoding="async"
                    class="w-full h-full object-cover object-center"
                >
                <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-slate-900/90 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end items-start">
                    <span class="inline-block bg-white/20 backdrop-blur text-white text-xxs font-bold px-2 py-1 rounded mb-1">${item.tag}</span>
                    <span class="text-white text-xs font-bold tracking-wide">${item.sub}</span>
                </div>
            </div>
            `;
        }).join('');
    }
</script>

