    if (window.instgrm) {
        window.instgrm.Embeds.process();
    } else {
        window.addEventListener('load', function() {
            if (window.instgrm) {
                window.instgrm.Embeds.process();
            }
        });
    }

    // Add title attributes to Instagram iframes for accessibility
    function addInstagramIframeTitles() {
        const iframes = document.querySelectorAll('.instagram-embed-wrapper iframe');
        iframes.forEach((iframe, index) => {
            if (!iframe.title) {
                const permalink = iframe.getAttribute('src')?.match(/\/reel\/([^\/]+)/)?.[1];
                iframe.title = permalink 
                    ? `Instagram 貼文：${permalink}` 
                    : `Instagram 嵌入內容 ${index + 1}`;
            }
        });
    }

    // Run after Instagram embeds are loaded
    window.addEventListener('load', () => {
        setTimeout(addInstagramIframeTitles, 2000); // Wait for Instagram script to create iframes
    });

