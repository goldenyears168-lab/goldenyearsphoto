<script>
/**
 * Portfolio Gallery Filter
 * 
 * Simple, accessible filtering for portfolio gallery items.
 * Uses data-filter and data-category attributes for clean separation.
 */
(function() {
  'use strict';
  
  const filterContainer = document.querySelector('.portfolio-filter');
  if (!filterContainer) return;
  
  const buttons = document.querySelectorAll('.portfolio-filter .filter-btn');
  const items = document.querySelectorAll('.portfolio-gallery .gallery-item');
  
  /**
   * Apply filter to gallery items
   * @param {string} category - Category to filter by, or 'all' to show all
   */
  function applyFilter(category) {
    // Update gallery items visibility
    items.forEach(item => {
      const shouldShow = category === 'all' || item.dataset.category === category;
      item.hidden = !shouldShow;
    });
    
    // Update button states
    buttons.forEach(button => {
      const isActive = button.dataset.filter === category;
      button.classList.toggle('is-active', isActive);
      button.setAttribute('aria-pressed', String(isActive));
    });
  }
  
  /**
   * Handle filter button clicks
   */
  buttons.forEach(button => {
    button.addEventListener('click', function() {
      const category = this.dataset.filter;
      applyFilter(category);
      
      // Update URL hash for shareable links
      if (category === 'all') {
        history.replaceState(null, '', window.location.pathname);
      } else {
        history.replaceState(null, '', `#filter=${category}`);
      }
    });
  });
  
  /**
   * Initialize filter from URL hash or default to 'passport-korea'
   */
  function initializeFilter() {
    const hash = new URLSearchParams(window.location.hash.replace(/^#/, '')).get('filter');
    // Default to 'passport-korea' instead of 'all' - only show Korean passport items on load
    const defaultCategory = hash || 'passport-korea';
    applyFilter(defaultCategory);
  }
  
  // Initialize on page load - will automatically filter to passport-korea
  initializeFilter();
  
  // Handle browser back/forward navigation
  window.addEventListener('hashchange', initializeFilter);
})();
</script>

<script>
/**
 * Hero Image Float Animation
 * 
 * Gentle fade-in and float-up animation for hero image on page load.
 * Aligned with "Warm × Enterprise" design system - subtle and professional.
 */
(function() {
  'use strict';
  
  // Wait for DOM and images to be ready
  function initHeroAnimation() {
    const heroImage = document.querySelector('.hero-image');
    if (!heroImage) return;
    
    // Check if image is already loaded
    const img = heroImage.querySelector('img');
    if (img && img.complete) {
      // Image already loaded, trigger animation immediately
      requestAnimationFrame(() => {
        heroImage.classList.add('is-loaded');
      });
    } else if (img) {
      // Wait for image to load
      img.addEventListener('load', () => {
        requestAnimationFrame(() => {
          heroImage.classList.add('is-loaded');
        });
      }, { once: true });
      
      // Fallback: trigger after a short delay if image takes too long
      setTimeout(() => {
        if (!heroImage.classList.contains('is-loaded')) {
          heroImage.classList.add('is-loaded');
        }
      }, 500);
    } else {
      // No image found, trigger animation anyway
      requestAnimationFrame(() => {
        heroImage.classList.add('is-loaded');
      });
    }
  }
  
  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeroAnimation);
  } else {
    // DOM already ready
    initHeroAnimation();
  }
})();
</script>