    // Testimonial Carousel - Display 3 items on desktop, 1 on mobile
    (function() {
        const carousel = document.getElementById('testimonial-carousel');
        const track = carousel?.querySelector('.testimonial-track');
        const prevBtn = document.getElementById('testimonial-prev');
        const nextBtn = document.getElementById('testimonial-next');
        const dotsContainer = document.getElementById('testimonial-dots');
        
        if (!track || !prevBtn || !nextBtn || !dotsContainer) return;
        
        let currentIndex = 0;
        const totalSlides = 8;
        let dots = [];
        
        // Get number of visible slides based on screen size
        function getVisibleSlides() {
            return window.innerWidth >= 768 ? 3 : 1;
        }
        
        // Calculate max index based on visible slides
        function getMaxIndex() {
            const visible = getVisibleSlides();
            return Math.max(0, totalSlides - visible);
        }
        
        // Generate dots dynamically based on visible slides
        function generateDots() {
            const maxIndex = getMaxIndex();
            const dotsCount = maxIndex + 1; // Number of pages, not slides
            
            dotsContainer.innerHTML = '';
            dots = [];
            
            for (let i = 0; i < dotsCount; i++) {
                const dot = document.createElement('button');
                dot.className = 'testimonial-dot w-2 h-2 rounded-full bg-slate-300 transition-all';
                dot.setAttribute('data-index', i);
                dot.setAttribute('aria-label', `Go to page ${i + 1}`);
                dot.addEventListener('click', () => goToSlide(i));
                dotsContainer.appendChild(dot);
                dots.push(dot);
            }
        }
        
        function updateCarousel() {
            // Get actual slide width (including padding) for accurate calculation
            const firstSlide = track.querySelector('.testimonial-slide');
            if (!firstSlide) return;
            
            // Use getBoundingClientRect().width to get actual rendered width including padding
            const slideWidth = firstSlide.getBoundingClientRect().width;
            const translateX = -currentIndex * slideWidth;
            
            // Use translate3d for better performance and hardware acceleration
            track.style.transform = `translate3d(${translateX}px, 0, 0)`;
            
            // Update dots (only if dots array exists and has items)
            if (dots && dots.length > 0) {
                dots.forEach((dot, index) => {
                    if (index === currentIndex) {
                        dot.classList.add('active', 'bg-slate-600', 'w-3');
                        dot.classList.remove('bg-slate-300', 'w-2');
                    } else {
                        dot.classList.remove('active', 'bg-slate-600', 'w-3');
                        dot.classList.add('bg-slate-300', 'w-2');
                    }
                });
            }
        }
        
        function nextSlide() {
            const maxIndex = getMaxIndex();
            if (currentIndex >= maxIndex) {
                currentIndex = 0;
            } else {
                currentIndex += 1;
            }
            updateCarousel();
        }
        
        function prevSlide() {
            const maxIndex = getMaxIndex();
            if (currentIndex <= 0) {
                currentIndex = maxIndex;
            } else {
                currentIndex -= 1;
            }
            updateCarousel();
        }
        
        function goToSlide(index) {
            const maxIndex = getMaxIndex();
            currentIndex = Math.min(index, maxIndex);
            updateCarousel();
        }
        
        nextBtn.addEventListener('click', nextSlide);
        prevBtn.addEventListener('click', prevSlide);
        
        // Use ResizeObserver to watch carousel container size changes
        // This catches IG embeds, font loading, and other layout shifts
        let rafId = null;
        const resizeObserver = new ResizeObserver(() => {
            if (rafId) cancelAnimationFrame(rafId);
            rafId = requestAnimationFrame(() => {
                generateDots(); // Regenerate dots on resize
                const maxIndex = getMaxIndex();
                if (currentIndex > maxIndex) {
                    currentIndex = maxIndex;
                }
                updateCarousel();
            });
        });
        resizeObserver.observe(carousel);
        
        // Also handle window resize for viewport changes (optional, but keeps compatibility)
        let windowResizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(windowResizeTimeout);
            windowResizeTimeout = setTimeout(() => {
                generateDots();
                const maxIndex = getMaxIndex();
                if (currentIndex > maxIndex) {
                    currentIndex = maxIndex;
                }
                updateCarousel();
            }, 250);
        });
        
        // Auto-play with 15 second interval for better reading
        let autoPlayInterval = setInterval(nextSlide, 15000);
        
        // Helper function to start auto-play
        function startAutoPlay() {
            clearInterval(autoPlayInterval); // Clear any existing interval first
            autoPlayInterval = setInterval(nextSlide, 15000);
        }
        
        // Helper function to stop auto-play
        function stopAutoPlay() {
            clearInterval(autoPlayInterval);
        }
        
        // Pause on hover
        carousel.addEventListener('mouseenter', stopAutoPlay);
        carousel.addEventListener('mouseleave', startAutoPlay);
        
        // Touch/swipe support for mobile
        let touchStartX = 0;
        let touchEndX = 0;
        let isDragging = false;
        let startTranslate = 0;
        
        track.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
            isDragging = true;
            // Use actual slide width for touch calculations
            const firstSlide = track.querySelector('.testimonial-slide');
            if (firstSlide) {
                const slideWidth = firstSlide.getBoundingClientRect().width;
                startTranslate = -currentIndex * slideWidth;
            }
            track.style.transition = 'none';
        }, { passive: true });
        
        track.addEventListener('touchmove', (e) => {
            if (isDragging) {
                const currentX = e.changedTouches[0].screenX;
                const diff = touchStartX - currentX;
                const newTranslate = startTranslate + diff;
                track.style.transform = `translateX(${newTranslate}px)`;
            }
        }, { passive: true });
        
        track.addEventListener('touchend', (e) => {
            if (isDragging) {
                touchEndX = e.changedTouches[0].screenX;
                track.style.transition = 'transform 0.7s ease-in-out';
                
                const swipeThreshold = 50;
                const diff = touchStartX - touchEndX;
                
                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        nextSlide();
                    } else {
                        prevSlide();
                    }
                } else {
                    updateCarousel(); // Reset to current position if swipe is too small
                }
                
                isDragging = false;
            }
        }, { passive: true });
        
