{#
  Comparison Table Macro
  
  Creates a unified comparison table.
  
  Parameters:
    - title: Table title
    - items: Array of comparison items {'label': '項目', 'optionA': '選項A', 'optionB': '選項B'}
  
  Usage:
    {% from "macros/comparison-table.njk" import comparisonTable %}
    {% set items = [
        {'label': '風格', 'optionA': '正式、嚴肅', 'optionB': '自然、自信'},
        {'label': '修圖', 'optionA': '過度磨皮', 'optionB': '自然精修'}
    ] %}
    {{ comparisonTable("韓式證件照 vs 傳統證件照", items) }}
#}

{% macro comparisonTable(title, items) %}
<div class="mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-slate-900 text-center mb-8">{{ title }}</h2>
    <div class="overflow-x-auto">
        <div class="bg-sand-100/50 rounded-xl shadow-sm p-6 md:p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="font-bold text-slate-900 text-lg">項目</div>
                <div class="font-bold text-slate-900 text-lg">選項 A</div>
                <div class="font-bold text-slate-900 text-lg">選項 B</div>
            </div>
            {% for item in items %}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-4 {% if not loop.last %}mb-2{% endif %} {% if loop.index % 2 == 0 %}bg-sand-50/50 rounded-lg px-4{% endif %}">
                <div class="font-semibold text-slate-700">{{ item.label }}</div>
                <div class="text-slate-600">{{ item.optionA }}</div>
                <div class="text-slate-600">{{ item.optionB }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endmacro %}

