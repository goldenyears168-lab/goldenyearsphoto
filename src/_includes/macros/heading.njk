{#
  Heading Macro
  
  Creates a standardized heading component.
  
  Parameters:
    - level: Heading level 1-6 (default: 1)
    - text: Heading text
    - size: 'xs' | 'sm' | 'base' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' (optional, auto-based on level)
    - class: Additional CSS classes (optional)
    - id: Heading id attribute (optional)
  
  Usage:
    {% from "macros/heading.njk" import heading %}
    {{ heading(1, "主標題", "4xl", "mb-6") }}
    {{ heading(2, "副標題", "", "mb-4", "section-title") }}
#}

{% macro heading(level=1, text='', size='', class='', id='') %}
  {% set defaultSizes = {
    '1': '4xl',
    '2': '3xl',
    '3': '2xl',
    '4': 'xl',
    '5': 'lg',
    '6': 'base'
  } %}
  
  {% set headingSize = size or defaultSizes[level] %}
  {% set headingClasses = ['font-bold text-trust-950', 'text-' + headingSize, class] | join(' ') | trim %}
  {% set tag = 'h' + level %}
  
  <{{ tag }}{% if id %} id="{{ id }}"{% endif %} class="{{ headingClasses }}">
    {{ text }}
  </{{ tag }}>
{% endmacro %}

